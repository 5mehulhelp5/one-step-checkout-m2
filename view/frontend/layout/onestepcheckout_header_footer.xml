<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Mavenbird\OneStepCheckout\Block\Checkout\CmsBlock" name="top.cms_block" before="-">
                <action method="setArea">
                    <argument name="area" xsi:type="string">header</argument>
                </action>
            </block>
            <block class="Mavenbird\OneStepCheckout\Block\Checkout\CmsBlock" name="bottom.cms_block" after="-">
                <action method="setArea">
                    <argument name="area" xsi:type="string">footer</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
